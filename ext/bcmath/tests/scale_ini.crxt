--TEST--
BCMath functions return result with default scale
--EXTENSIONS--
bcmath
--INI--
bcmath.scale = 5
--FILE--
<?crx
echo
    'bcadd:    ', bcadd('2', '1'), CRX_EOL,
    'bcdiv:    ', bcdiv('2', '1'), CRX_EOL,
    'bcmul:    ', bcmul('2', '1'), CRX_EOL,
    'bcpow:    ', bcpow('2', '1'), CRX_EOL,
    'bcpowmod: ', bcpowmod('2', '1', '3'), CRX_EOL,
    'bcsqrt:   ', bcsqrt('4'), CRX_EOL,
    'bcsub:    ', bcsub('2', '1'), CRX_EOL;
?>
--EXPECT--
bcadd:    3.00000
bcdiv:    2.00000
bcmul:    2.00000
bcpow:    2.00000
bcpowmod: 2.00000
bcsqrt:   2.00000
bcsub:    1.00000
