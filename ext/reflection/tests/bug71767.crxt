--TEST--
Bug #71767 (ReflectionMethod::getDocComment returns the wrong comment)
--FILE--
<?crx

/** Correct docblock */
function foo(
    /** wrong docblock */
    $arg
) {
}

class Foo {
    /** Correct docblock */
    public function bar(
        /** wrong docblock */
        $arg
    ) {

    }
}

/** Correct docblock */
$func = function(
    /** wrong docblock */
    $arg
) {
};

/** Correct docblock */
$func2 = fn(
    /** wrong docblock */
    $arg
) => null;

$reflectionFunction = new ReflectionFunction('foo');
$reflectionClass = new ReflectionClass(Foo::class);
$reflectionClosure = new ReflectionFunction($func);
$reflectionArrowFn = new ReflectionFunction($func2);

echo $reflectionFunction->getDocComment() . CRX_EOL;
echo $reflectionClass->getMethod('bar')->getDocComment() . CRX_EOL;
echo $reflectionClosure->getDocComment() . CRX_EOL;
echo $reflectionArrowFn->getDocComment() . CRX_EOL;

echo "Done\n";
?>
--EXPECT--
/** Correct docblock */
/** Correct docblock */
/** Correct docblock */
/** Correct docblock */
Done
