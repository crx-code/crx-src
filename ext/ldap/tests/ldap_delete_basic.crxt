--TEST--
ldap_delete() - Basic delete operation
--CREDITS--
Patrick Allaert <patrickallaert@crx.net>
# Belgian CRX Testfest 2009
--EXTENSIONS--
ldap
--SKIPIF--
<?crx require_once('skipifbindfailure.inc'); ?>
--FILE--
<?crx
require "connect.inc";

$link = ldap_connect_and_bind($uri, $user, $passwd, $protocol_version);
ldap_add($link, "dc=my-domain,$base", array(
    "objectClass"	=> array(
        "top",
        "dcObject",
        "organization"),
    "dc"			=> "my-domain",
    "o"				=> "my-domain",
));

var_dump(
    ldap_delete($link, "dc=my-domain,$base"),
    @ldap_search($link, "dc=my-domain,$base", "(o=my-domain)")
);
?>
--CLEAN--
<?crx
require "connect.inc";

$link = ldap_connect_and_bind($uri, $user, $passwd, $protocol_version);

@ldap_delete($link, "dc=my-domain,$base");
?>
--EXPECT--
bool(true)
bool(false)
