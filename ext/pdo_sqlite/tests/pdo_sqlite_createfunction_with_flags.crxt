--TEST--
PDO_sqlite: Testing sqliteCreateFunction() with flags
--EXTENSIONS--
pdo_sqlite
--SKIPIF--
<?crx
if (!defined('PDO::SQLITE_DETERMINISTIC')) die('skip system sqlite is too old');
?>
--FILE--
<?crx

$db = new PDO('sqlite::memory:');

$db->query('CREATE TABLE IF NOT EXISTS foobar (id INT AUTO INCREMENT, name TEXT)');

$db->query('INSERT INTO foobar VALUES (NULL, "CRX")');
$db->query('INSERT INTO foobar VALUES (NULL, "CRX6")');


$db->sqliteCreateFunction('testing', function($v) { return strtolower($v); }, 1, PDO::SQLITE_DETERMINISTIC);


foreach ($db->query('SELECT testing(name) FROM foobar') as $row) {
    var_dump($row);
}

$db->query('DROP TABLE foobar');

?>
--EXPECT--
array(2) {
  ["testing(name)"]=>
  string(3) "crx"
  [0]=>
  string(3) "crx"
}
array(2) {
  ["testing(name)"]=>
  string(4) "crx6"
  [0]=>
  string(4) "crx6"
}
