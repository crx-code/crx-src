--TEST--
Bug #70362 (Can't copy() large 'data://' with open_basedir)
--INI--
open_basedir=.
--FILE--
<?crx
$file = __DIR__ . '/bug70362.txt';
$data = str_repeat('0', 4096);
$data = 'data://plain/text;base64,' . base64_encode($data);
var_dump(copy($data, $file));
echo file_get_contents($file);
?>
--CLEAN--
<?crx
$file = __DIR__ . '/bug70362.txt';
@unlink($file);
?>
--EXPECT--
bool(true)

