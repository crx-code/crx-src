--TEST--
Bug #44818 (crx://memory writeable when opened read only)
--FILE--
<?crx
function test($url, $mode) {
    echo "$url, $mode\n";
    $fd = fopen($url, $mode);
    var_dump($fd, fwrite($fd, "foo"));
    var_dump(fseek($fd, 0, SEEK_SET), fread($fd, 3));
    fclose($fd);
}
test("crx://memory","r");
test("crx://memory","r+");
test("crx://temp","r");
test("crx://temp","w");
?>
