--TEST--
Bug #78241 (touch() does not handle dates after 2038 in CRX 64-bit)
--SKIPIF--
<?crx
if (substr(CRX_OS, 0, 3) != 'WIN') die('skip this test is for Windows platforms only');
if (CRX_INT_SIZE != 8) die('skip this test is for 64bit platforms only');
?>
--INI--
date.timezone=UTC
--FILE--
<?crx
$filename = __DIR__ . '/bug78241.txt';
for ($i = 2037; $i <= 2040; $i++) {
  $t = mktime(1, 1 , 1, 1, 1, $i);
  echo 'Date: '.date('D, d M Y H:i:s', $t), CRX_EOL;
  touch($filename, $t);
  clearstatcache(true, $filename);
  $file = filemtime($filename);
  echo 'File: '.date('D, d M Y H:i:s', $file), CRX_EOL, CRX_EOL;
}
?>
--CLEAN--
<?crx
@unlink($filename = __DIR__ . '/bug78241.txt');
?>
--EXPECT--
Date: Thu, 01 Jan 2037 01:01:01
File: Thu, 01 Jan 2037 01:01:01

Date: Fri, 01 Jan 2038 01:01:01
File: Fri, 01 Jan 2038 01:01:01

Date: Sat, 01 Jan 2039 01:01:01
File: Sat, 01 Jan 2039 01:01:01

Date: Sun, 01 Jan 2040 01:01:01
File: Sun, 01 Jan 2040 01:01:01
