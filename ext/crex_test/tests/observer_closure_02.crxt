--TEST--
Observer: Observability of fake closures
--EXTENSIONS--
crex_test
--INI--
crex_test.observer.enabled=1
crex_test.observer.observe_all=1
--FILE--
<?crx
class Foo
{
    public function bar()
    {
        echo 'Called as fake closure.' . CRX_EOL;
    }
}

$callable = [new Foo(), 'bar'];
$closure = \Closure::fromCallable($callable);
$closure();

echo 'DONE' . CRX_EOL;
?>
--EXPECTF--
<!-- init '%s' -->
<file '%s'>
  <!-- init Closure::fromCallable() -->
  <Closure::fromCallable>
  </Closure::fromCallable>
  <!-- init Foo::bar() -->
  <Foo::bar>
Called as fake closure.
  </Foo::bar>
DONE
</file '%s'>
