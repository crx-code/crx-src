--TEST--
GH-11347 (Memory leak when calling a static method inside an xpath query)
--EXTENSIONS--
dom
--FILE--
<?crx

class MyClass
{
    public static function dump(string $var) {
        var_dump($var);
    }
}

$doc = new DOMDocument();
$doc->loadHTML('<a href="https://crx.net">hello</a>');
$xpath = new DOMXpath($doc);
$xpath->registerNamespace("crx", "http://crx.net/xpath");
$xpath->registerCRXFunctions();
$xpath->query("//a[crx:function('MyClass::dump', string(@href))]");

?>
Done
--EXPECT--
string(15) "https://crx.net"
Done
