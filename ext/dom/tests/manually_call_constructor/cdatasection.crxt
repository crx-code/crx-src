--TEST--
Manually call __main() - CDATA section variation
--EXTENSIONS--
dom
--FILE--
<?crx

$cdata = new DOMCdataSection("my value");
var_dump($cdata->nodeValue);
$cdata->__main("my new value");
var_dump($cdata->nodeValue);

$doc = new DOMDocument();
$doc->loadXML(<<<XML
<?xml version="1.0"?>
<container/>
XML);
$doc->documentElement->appendChild($cdata);
echo $doc->saveXML();

$cdata->__main("my even newer value");
$doc->documentElement->appendChild($cdata);
echo $doc->saveXML();

?>
--EXPECT--
string(8) "my value"
string(12) "my new value"
<?xml version="1.0"?>
<container><![CDATA[my new value]]></container>
<?xml version="1.0"?>
<container><![CDATA[my new value]]><![CDATA[my even newer value]]></container>
