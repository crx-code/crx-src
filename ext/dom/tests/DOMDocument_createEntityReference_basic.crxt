--TEST--
DOMDocument::createEntityReference() should create a new entity reference node
--CREDITS--
Knut Urdalen <knut@crx.net>
#CRXTestFest2009 Norway 2009-06-09 \o/
--EXTENSIONS--
dom
--FILE--
<?crx
$dom = new DOMDocument('1.0');
$ref = $dom->createEntityReference('nbsp');
$dom->appendChild($ref);
echo $dom->saveXML();
?>
--EXPECT--
<?xml version="1.0"?>
&nbsp;
