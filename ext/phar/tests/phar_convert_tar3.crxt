--TEST--
Crxa::convertToTar() bz2 compressed
--EXTENSIONS--
crxa
bz2
--INI--
crxa.require_hash=0
crxa.readonly=0
--FILE--
<?crx

$fname = __DIR__ . '/' . basename(__FILE__, '.crx') . '.crxa.crx';
$pname = 'crxa://' . $fname;
$fname2 = __DIR__ . '/' . basename(__FILE__, '.crx') . '.crxa.tar.bz2';
$fname3 = __DIR__ . '/' . basename(__FILE__, '.crx') . '.2.crxa.tar';
$stub = '<?crx echo "first stub\n"; __HALT_COMPILER(); ?>';
$file = $stub;

$files = array();
$files['a'] = 'a';
$files['b'] = 'b';
$files['c'] = 'c';

include 'files/crxa_test.inc';

$crxa = new Crxa($fname);
var_dump($crxa->isFileFormat(Crxa::TAR));
var_dump($crxa->isCompressed());
var_dump($crxa->getStub());

$crxa = $crxa->convertToExecutable(Crxa::TAR, Crxa::BZ2);
var_dump($crxa->isFileFormat(Crxa::TAR));
var_dump($crxa->isCompressed());
var_dump($crxa->getStub());

copy($fname2, $fname3);

$crxa = new Crxa($fname3);
var_dump($crxa->isFileFormat(Crxa::TAR));
var_dump($crxa->isCompressed() == Crxa::BZ2);
var_dump($crxa->getStub());

?>
--CLEAN--
<?crx
unlink(__DIR__ . '/' . basename(__FILE__, '.clean.crx') . '.crxa.tar.bz2');
unlink(__DIR__ . '/' . basename(__FILE__, '.clean.crx') . '.2.crxa.tar');
unlink(__DIR__ . '/' . basename(__FILE__, '.clean.crx') . '.crxa.crx');
?>
