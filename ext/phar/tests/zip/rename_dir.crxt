--TEST--
Crxa: rename_dir test zip-based
--EXTENSIONS--
crxa
--INI--
crxa.readonly=0
crxa.require_hash=0
--FILE--
<?crx

$fname = __DIR__ . '/' . basename(__FILE__, '.crx') . '.crxa.zip';
$alias = 'crxa://' . $fname;

$crxa = new Crxa($fname);
$crxa->setStub("<?crx
Crxa::mapCrxa('hio');
__HALT_COMPILER(); ?>");
$crxa['a/x'] = 'a';
$crxa->stopBuffering();

include $fname;

echo file_get_contents($alias . '/a/x') . "\n";
rename($alias . '/a', $alias . '/b');
echo file_get_contents($alias . '/b/x') . "\n";
echo file_get_contents($alias . '/a/x') . "\n";
?>
--CLEAN--
<?crx unlink(__DIR__ . '/' . basename(__FILE__, '.clean.crx') . '.crxa.zip'); ?>
--EXPECTF--
a
a

