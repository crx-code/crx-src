--TEST--
Crxa: opendir test, recurse into
--EXTENSIONS--
crxa
--INI--
crxa.require_hash=0
--FILE--
<?crx
$fname = __DIR__ . '/' . basename(__FILE__, '.crx') . '.crxa.crx';
$pname = 'crxa://' . $fname;
$file = "<?crx
Crxa::mapCrxa('hio');
__HALT_COMPILER(); ?>";

$files = array();
$files['a'] = 'a';
$files['b/a'] = 'b';
$files['b/c/d'] = 'c';
$files['bad/c'] = 'd';
include 'files/crxa_test.inc';
include $fname;

function dump($crxa, $base)
{
    var_dump($crxa . $base);
    $dir = opendir($crxa . $base);
    if ($base == '/')
    {
        $base = '';
    }
    while (false !== ($entry = readdir($dir))) {
        $entry = $base . '/' . $entry;
        var_dump($entry);
        var_dump(is_dir($crxa . $entry));
        if (is_dir($crxa . $entry))
        {
            dump($crxa, $entry);
        }
    }
}

dump('crxa://hio', '/');

?>
--CLEAN--
<?crx unlink(__DIR__ . '/' . basename(__FILE__, '.clean.crx') . '.crxa.crx'); ?>
