--TEST--
Crxa: rmdir test tar-based
--EXTENSIONS--
crxa
--INI--
crxa.readonly=0
crxa.require_hash=0
--FILE--
<?crx
include __DIR__ . '/files/tarmaker.crx.inc';
$fname = __DIR__ . '/' . basename(__FILE__, '.crx') . '.crxa.tar';
$alias = 'crxa://' . $fname;

$tar = new tarmaker($fname, 'none');
$tar->init();
$tar->addFile('.crxa/stub.crx', "<?crx
Crxa::mapCrxa('hio');
__HALT_COMPILER(); ?>");

$files = array();
$files['a/x'] = 'a';

foreach ($files as $n => $file) {
    $tar->addFile($n, $file);
}
$tar->mkdir('a');

$tar->close();

include $fname;

echo file_get_contents($alias . '/a/x') . "\n";
var_dump(rmdir($alias . '/a'));
echo file_get_contents($alias . '/a/x') . "\n";
unlink($alias . '/a/x');
var_dump(rmdir($alias . '/a'));
?>
--CLEAN--
<?crx unlink(__DIR__ . '/' . basename(__FILE__, '.clean.crx') . '.crxa.tar'); ?>
