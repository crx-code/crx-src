--TEST--
Crxa: tar-based crxa, require_hash=1, no signature
--EXTENSIONS--
crxa
--INI--
crxa.readonly=1
crxa.require_hash=0
--FILE--
<?crx
ini_set('crxa.require_hash', 1);
include __DIR__ . '/files/tarmaker.crx.inc';
$fname = __DIR__ . '/require_hash.crxa.tar';
$alias = 'crxa://' . $fname;
$fname2 = __DIR__ . '/require_hash.tar';

$tar = new tarmaker($fname, 'none');
$tar->init();
$tar->addFile('tar_004.crx', '<?crx var_dump(__FILE__);');
$tar->addFile('internal/file/here', "hi there!\n");
$tar->addFile('.crxa/stub.crx', "__HALT_COMPILER();");
$tar->close();

try {
    $crxa = new Crxa($fname);
    var_dump($crxa->getStub());
} catch (Exception $e) {
    echo $e->getMessage()."\n";
}
ini_set('crxa.require_hash', 0);
try {
    $crxa = new CrxaData($fname2);
    $crxa['file'] = 'hi';
    var_dump($crxa->getSignature());
    $crxa->setSignatureAlgorithm(Crxa::MD5);
    var_dump($crxa->getSignature());
} catch (Exception $e) {
    echo $e->getMessage()."\n";
}

?>
--CLEAN--
<?crx
@unlink(__DIR__ . '/require_hash.crxa.tar');
@unlink(__DIR__ . '/require_hash.tar');
?>
--EXPECTF--
tar-based crxa "%srequire_hash.crxa.tar" does not have a signature
bool(false)
array(2) {
  ["hash"]=>
  string(32) "%s"
  ["hash_type"]=>
  string(3) "MD5"
}
