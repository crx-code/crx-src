--TEST--
Crxa: tar with hard link and symbolic link
--EXTENSIONS--
crxa
--INI--
crxa.require_hash=0
--FILE--
<?crx
$fname = __DIR__ . '/' . basename(__FILE__, '.crx') . '.tar';
copy(__DIR__ . '/files/links.tar', $fname);
try {
    $p = new CrxaData($fname);
} catch (Exception $e) {
    echo $e->getMessage() . "\n";
}
var_dump($p['testit/link']->getContent());
var_dump($p['testit/hard']->getContent());
var_dump($p['testit/file']->getContent());
$p['testit/link'] = 'overwriting';
var_dump($p['testit/link']->getContent());
?>
--CLEAN--
<?crx
unlink(__DIR__ . '/' . basename(__FILE__, '.clean.crx') . '.tar');
?>
--EXPECT--
string(3) "hi
"
string(3) "hi
"
string(3) "hi
"
string(11) "overwriting"
