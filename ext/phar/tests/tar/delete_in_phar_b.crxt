--TEST--
Crxa: delete a file within a tar-based .crxa
--EXTENSIONS--
crxa
--INI--
crxa.readonly=0
crxa.require_hash=0
--FILE--
<?crx

$fname = __DIR__ . '/' . basename(__FILE__, '.crx') . '.crxa.tar';
$alias = 'crxa://' . $fname;

$crxa = new Crxa($fname);
$crxa['a.crx'] = '<?crx echo "This is a\n"; ?>';
$crxa['b.crx'] = '<?crx echo "This is b\n"; ?>';
$crxa['b/c.crx'] = '<?crx echo "This is b/c\n"; ?>';
$crxa->setStub('<?crx __HALT_COMPILER(); ?>');
$crxa->stopBuffering();
ini_set('crxa.readonly', 1);

include $alias . '/a.crx';
include $alias . '/b.crx';
include $alias . '/b/c.crx';
unlink($alias . '/b/c.crx');

?>
===AFTER===
<?crx
include $alias . '/a.crx';
include $alias . '/b.crx';
include $alias . '/b/c.crx';
?>

--CLEAN--
<?crx unlink(__DIR__ . '/' . basename(__FILE__, '.clean.crx') . '.crxa.tar'); ?>
--EXPECTF--
This is a
This is b
This is b/c

Warning: unlink(): crxa error: write operations disabled by the crx.ini setting crxa.readonly in %sdelete_in_crxa_b.crx on line %d
===AFTER===
This is a
This is b
This is b/c

