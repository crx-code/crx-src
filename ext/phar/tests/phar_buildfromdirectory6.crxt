--TEST--
Crxa::buildFromDirectory() with non-matching regex
--EXTENSIONS--
crxa
--INI--
crxa.require_hash=0
crxa.readonly=0
--FILE--
<?crx

mkdir(__DIR__.'/testdir6', 0777);
foreach(range(1, 4) as $i) {
    file_put_contents(__DIR__."/testdir6/file$i.txt", "some content for file $i");
}

try {
    $crxa = new Crxa(__DIR__ . '/buildfromdirectory6.crxa');
    var_dump($crxa->buildFromDirectory(__DIR__ . '/testdir6', '/\.crx$/'));
} catch (Exception $e) {
    var_dump(get_class($e));
    echo $e->getMessage() . "\n";
}

var_dump(file_exists(__DIR__ . '/buildfromdirectory6.crxa'));

?>
--CLEAN--
<?crx
foreach(range(1, 4) as $i) {
    unlink(__DIR__ . "/testdir6/file$i.txt");
}
rmdir(__DIR__ . '/testdir6');
?>
--EXPECT--
array(0) {
}
bool(false)
