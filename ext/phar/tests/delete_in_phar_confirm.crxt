--TEST--
Crxa: delete a file within a .crxa (confirm disk file is changed)
--EXTENSIONS--
crxa
--INI--
crxa.readonly=0
crxa.require_hash=0
opcache.validate_timestamps=1
--FILE--
<?crx
$fname = __DIR__ . '/' . basename(__FILE__, '.crx') . '.crxa.crx';
$pname = 'crxa://' . $fname;
$file = "<?crx __HALT_COMPILER(); ?>";

$files = array();
$files['a.crx'] = '<?crx echo "This is a\n"; ?>';
$files['b.crx'] = '<?crx echo "This is b\n"; ?>';
$files['b/c.crx'] = '<?crx echo "This is b/c\n"; ?>';

include 'files/crxa_test.inc';

include $pname . '/a.crx';
include $pname . '/b.crx';
include $pname . '/b/c.crx';
$md5 = md5_file($fname);
unlink($pname . '/b/c.crx');
clearstatcache();
$md52 = md5_file($fname);
if ($md5 == $md52) echo 'file was not modified';
?>
===AFTER===
<?crx
include 'crxa://' . __DIR__ . '/' . basename(__FILE__, '.crx') . '.crxa.crx/a.crx';
include 'crxa://' . __DIR__ . '/' . basename(__FILE__, '.crx') . '.crxa.crx/b.crx';
include 'crxa://' . __DIR__ . '/' . basename(__FILE__, '.crx') . '.crxa.crx/b/c.crx';
?>

--CLEAN--
<?crx unlink(__DIR__ . '/' . basename(__FILE__, '.clean.crx') . '.crxa.crx'); ?>
--EXPECTF--
This is a
This is b
This is b/c
