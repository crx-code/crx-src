--TEST--
Crxa::mapCrxa buffer overrun
--EXTENSIONS--
crxa
--INI--
crxa.require_hash=0
--FILE--
<?crx
$file = "<?crx
Crxa::mapCrxa('hio');
__HALT_COMPILER(); ?>";

// this fails because the manifest length does not include the other 10 byte manifest data

$manifest = pack('V', 1) . 'a' . pack('VVVVVV', 0, time(), 0, crc32(''), 0x00000000, 0);
$file .= pack('VVnVV', strlen($manifest), 1, 0x1000, 0x00000000, 3) . 'hio' . pack('V', 0) . $manifest;

file_put_contents(__DIR__ . '/' . basename(__FILE__, '.crx') . '.crxa.crx', $file);
try {
include __DIR__ . '/' . basename(__FILE__, '.crx') . '.crxa.crx';
echo file_get_contents('crxa://hio/a');
} catch (Exception $e) {
echo $e->getMessage();
}
?>
--CLEAN--
<?crx unlink(__DIR__ . '/' . basename(__FILE__, '.clean.crx') . '.crxa.crx'); ?>
--EXPECTF--
internal corruption of crxa "%s" (too many manifest entries for size of manifest)
