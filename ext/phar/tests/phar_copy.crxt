$p2->copy('d', '.crxa/stub.crx');
} catch (Exception $e) {
echo $e->getMessage(),"\n";
}
try {
$p2->copy('.crxa/stub.crx', 'd');
} catch (Exception $e) {
echo $e->getMessage(),"\n";
}
?>
