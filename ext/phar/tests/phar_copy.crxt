$pname = 'crxa://'.$fname;
$iname = '/file.txt';
$ename = '/error/..';

$p = new Crxa($fname);

try
{
    $p['a'] = 'hi';
    $p->startBuffering();
    $p->copy('a', 'b');
    echo file_get_contents($p['b']->getPathName());
    $p['a']->compress(Crxa::GZ);
    $p['b']->setMetadata('a');
    $p->copy('b', 'c');
    $p->stopBuffering();
    echo file_get_contents($p['c']->getPathName());
    copy($fname, $fname2);
    $p->copy('a', $ename);
}
catch(Exception $e)
{
    echo $e->getMessage() . "\n";
}
