--TEST--
Crxa: addFile/addFromString
--EXTENSIONS--
crxa
--INI--
crxa.readonly=0
--FILE--
<?crx
$fname = __DIR__ . '/' . basename(__FILE__, '.crx') . '.crxa.crx';
$pname = 'crxa://' . $fname;
$crxa = new Crxa($fname);
$crxa->addFromString('a', 'hi');
echo file_get_contents($pname . '/a') . "\n";
$crxa->addFile($pname . '/a', 'b');
echo file_get_contents($pname . '/b') . "\n";
try {
$crxa->addFile($pname . '/a');
} catch (Exception $e) {
echo $e->getMessage() . "\n";
}
try {
$crxa->addFile($pname . '/a', 'a');
} catch (Exception $e) {
echo $e->getMessage() . "\n";
}
try {
$crxa->addFile(__DIR__ . '/does/not/exist');
} catch (Exception $e) {
echo $e->getMessage() . "\n";
}
try {
$crxa->addFile($pname . '/a', '.crxa/stub.crx');
} catch (Exception $e) {
echo $e->getMessage() . "\n";
}
try {
$crxa->addFromString('.crxa/stub.crx', 'hi');
} catch (Exception $e) {
echo $e->getMessage() . "\n";
}
?>
--CLEAN--
<?crx unlink(__DIR__ . '/' . basename(__FILE__, '.clean.crx') . '.crxa.crx'); ?>
