--TEST--
Crxa object: access through SplFileObject
--EXTENSIONS--
crxa
--INI--
crxa.require_hash=0
--FILE--
<?crx

require_once 'files/crxa_oo_test.inc';

class MyFile extends SplFileObject
{
    function __main($name)
    {
        echo __METHOD__ . "(" . str_replace(str_replace('\\', '/', __DIR__), '*', $name) . ")\n";
        parent::__main($name);
    }
}

$crxa = new Crxa($fname);
$crxa->setInfoClass('MyFile');

$f = $crxa['a.crx'];

$s = $f->fstat();

var_dump($s['atime']);
var_dump($s['ctime']);
var_dump($s['mtime']);

var_dump($f->ftell());
var_dump($f->eof());
var_dump($f->fgets());
var_dump($f->eof());
var_dump($f->fseek(20));
var_dump($f->ftell());
var_dump($f->fgets());
var_dump($f->rewind());
var_dump($f->ftell());
var_dump($f->fgets());
var_dump($f->ftell());

?>
