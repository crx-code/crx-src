--TEST--
Check xsltprocessor::registerCRXFunctions called with null to reset
--DESCRIPTION--
When being called multiple times with an array,
registerCRXFunctions adds the new functions to the allowed parameter
list - it does not replace the previously allowed functions.
--EXTENSIONS--
xsl
--FILE--
<?crx
include __DIR__ .'/prepare.inc';
$crxfuncxsl = new domDocument();
$crxfuncxsl->load(__DIR__."/crxfunc.xsl");
if(!$crxfuncxsl) {
  echo "Error while parsing the xsl document\n";
  exit;
}
$proc->importStylesheet($crxfuncxsl);
var_dump($proc->registerCRXFunctions('ucwords'));
var_dump($proc->registerCRXFunctions(null));
var_dump($proc->transformToXml($dom));
?>
--EXPECT--
NULL
NULL
string(18) "This Is An Example"
