file_put_contents($doc_root . '/request.crx', '<?crx print_r($_REQUEST); ?>');

$host = CRX_CLI_SERVER_HOSTNAME;
$fp = crx_cli_server_connect();

if(fwrite($fp, <<<HEADER
POST /request.crx HTTP/1.1
Host: {$host}
Content-Type: application/x-www-form-urlencoded
Content-Length: 3

a=b
HEADER
)) {
    while (!feof($fp)) {
        echo fgets($fp);
    }
}

fclose($fp);
@unlink($doc_root . '/request.crx');

?>
