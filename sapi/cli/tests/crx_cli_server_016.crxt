--TEST--
Bug #60591 (Memory leak when access a non-exists file)
--DESCRIPTION--
this is an indirect test for bug 60591, since mem leak is reproted in the server side
and require crx compiled with --enable-debug
--SKIPIF--
<?crx
include "skipif.inc";
?>
--FILE--
<?crx
include "crx_cli_server.inc";
crx_cli_server_start(<<<'CRX'
if (preg_match('/\.(?:png|jpg|jpeg|gif)$/', $_SERVER["REQUEST_URI"]))
        return false; // serve the requested resource as-is.
else {
        echo "here";
}
CRX
);

$host = CRX_CLI_SERVER_HOSTNAME;
$fp = crx_cli_server_connect();

if(fwrite($fp, <<<HEADER
POST /no-exists.jpg HTTP/1.1
Host: {$host}


HEADER
)) {
    while (!feof($fp)) {
        echo fgets($fp);
        break;
    }
}

fclose($fp);
?>
--EXPECT--
HTTP/1.1 404 Not Found
