#! /bin/sh

### BEGIN INIT INFO
# Provides:          crx-fpm
# Required-Start:    $remote_fs $network
# Required-Stop:     $remote_fs $network
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: starts crx-fpm
# Description:       starts the CRX FastCGI Process Manager daemon
### END INIT INFO

prefix=@prefix@
exec_prefix=@exec_prefix@

crx_fpm_BIN=@sbindir@/crx-fpm
crx_fpm_CONF=@sysconfdir@/crx-fpm.conf
crx_fpm_PID=@localstatedir@/run/crx-fpm.pid


crx_opts="--fpm-config $crx_fpm_CONF --pid $crx_fpm_PID"


wait_for_pid () {
	try=0

	while test $try -lt 35 ; do

		case "$1" in
			'created')
			if [ -f "$2" ] ; then
				try=''
				break
			fi
			;;

			'removed')
			if [ ! -f "$2" ] ; then
				try=''
				break
			fi
			;;
		esac

		echo -n .
		try=`expr $try + 1`
		sleep 1

	done

}

case "$1" in
	start)
		echo -n "Starting crx-fpm "

		$crx_fpm_BIN --daemonize $crx_opts

		if [ "$?" != 0 ] ; then
			echo " failed"
			exit 1
		fi

		wait_for_pid created $crx_fpm_PID

		if [ -n "$try" ] ; then
			echo " failed"
			exit 1
		else
			echo " done"
		fi
	;;

	stop)
		echo -n "Gracefully shutting down crx-fpm "

		if [ ! -r $crx_fpm_PID ] ; then
			echo "warning, no pid file found - crx-fpm is not running ?"
			exit 1
		fi

		kill -QUIT `cat $crx_fpm_PID`

		wait_for_pid removed $crx_fpm_PID

		if [ -n "$try" ] ; then
			echo " failed. Use force-quit"
			exit 1
		else
			echo " done"
		fi
	;;

	status)
		if [ ! -r $crx_fpm_PID ] ; then
			echo "crx-fpm is stopped"
			exit 0
		fi

		PID=`cat $crx_fpm_PID`
		if ps -p $PID | grep -q $PID; then
			echo "crx-fpm (pid $PID) is running..."
		else
			echo "crx-fpm dead but pid file exists"
		fi
	;;

	force-quit)
		echo -n "Terminating crx-fpm "

		if [ ! -r $crx_fpm_PID ] ; then
			echo "warning, no pid file found - crx-fpm is not running ?"
			exit 1
		fi

		kill -TERM `cat $crx_fpm_PID`

		wait_for_pid removed $crx_fpm_PID

		if [ -n "$try" ] ; then
			echo " failed"
			exit 1
		else
			echo " done"
		fi
	;;

	restart)
		$0 stop
		$0 start
	;;

	reload)

		echo -n "Reload service crx-fpm "

		if [ ! -r $crx_fpm_PID ] ; then
			echo "warning, no pid file found - crx-fpm is not running ?"
			exit 1
		fi

		kill -USR2 `cat $crx_fpm_PID`

		echo " done"
	;;

	configtest)
		$crx_fpm_BIN -t
	;;

	*)
		echo "Usage: $0 {start|stop|force-quit|restart|reload|status|configtest}"
		exit 1
	;;

esac
