--FILE--
<?crx

include "include.inc";

$crx = get_cgi_path();
reset_env_vars();

$f = tempnam(sys_get_temp_dir(), 'cgitest');

function test($script) {
    file_put_contents($GLOBALS['f'], $script);
    $cmd = escapeshellcmd($GLOBALS['crx']);
    $cmd .= ' -n -dreport_crex_debug=0 -dhtml_errors=0 ' . escapeshellarg($GLOBALS['f']);
    echo "----------\n";
    echo rtrim($script) . "\n";
    echo "----------\n";
    passthru($cmd);
}

test('<?crx ?>');
test('<?crx header_remove(); ?>');
test('<?crx header_remove("X-Foo"); ?>');
test('<?crx
header("X-Foo: Bar");
?>');
test('<?crx
header("X-Foo: Bar");
header("X-Bar: Baz");
header_remove("X-Foo");
?>');
test('<?crx
header("X-Foo: Bar");
header_remove("X-Foo: Bar");
?>');
test('<?crx
header("X-Foo: Bar");
header_remove("X-Foo:");
?>');
test('<?crx
header("X-Foo: Bar");
header_remove();
?>');
test('<?crx
header_remove("");
?>');
test('<?crx
header_remove(":");
?>');
test('<?crx
header("X-Foo: Bar");
echo "flush\n";
flush();
header_remove("X-Foo");
?>');

@unlink($f);
?>
