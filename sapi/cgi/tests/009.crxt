--TEST--
path info request without exported PATH_INFO
--SKIPIF--
<?crx include "skipif.inc"; ?>
--FILE--
<?crx

include "include.inc";

$crx = get_cgi_path();
reset_env_vars();

$f = tempnam(sys_get_temp_dir(), 'cgitest');

putenv("TRANSLATED_PATH=".$f."/x");
putenv("SCRIPT_FILENAME=".$f."/x");
file_put_contents($f, '<?crx var_dump($_SERVER["TRANSLATED_PATH"]); ?>');

echo (`$crx -n $f`);

echo "Done\n";

@unlink($f);
?>
