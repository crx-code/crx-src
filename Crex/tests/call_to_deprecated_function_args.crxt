--TEST--
Check that arguments are freed when calling a deprecated function
--EXTENSIONS--
crex_test
--FILE--
<?crx

set_error_handler(function($code, $msg) {
    throw new Error($msg);
});

try {
    crex_test_deprecated(new stdClass);
} catch (Error $e) {
    echo $e->getMessage(), "\n";
}

$ret = new stdClass;
try {
    $ret = crex_test_deprecated(new stdClass());
} catch (Error $e) {
    echo $e->getMessage(), "\n";
}

try {
    $fn = 'crex_test_deprecated';
    $fn(new stdClass);
} catch (Error $e) {
    echo $e->getMessage(), "\n";
}

$ret = new stdClass;
try {
    $fn = 'crex_test_deprecated';
    $ret = $fn(new stdClass);
} catch (Error $e) {
    echo $e->getMessage(), "\n";
}

?>
--EXPECT--
Function crex_test_deprecated() is deprecated
Function crex_test_deprecated() is deprecated
Function crex_test_deprecated() is deprecated
Function crex_test_deprecated() is deprecated
