--TEST--
Bug #54268 (Double free when destroy_crex_class fails)
--INI--
memory_limit=8M
--SKIPIF--
<?crx
$crex_mm_enabled = getenv("USE_CREX_ALLOC");
if ($crex_mm_enabled === "0") {
    die("skip Crex MM disabled");
}
?>
--FILE--
<?crx
class DestructableObject
{
        public function __destruct()
        {
                DestructableObject::__destruct();
        }
}
class DestructorCreator
{
        public $test;
        public function __destruct()
        {
                $this->test = new DestructableObject;
        }
}
class Test
{
        public static $mystatic;
}
$x = new Test();
Test::$mystatic = new DestructorCreator();
?>
