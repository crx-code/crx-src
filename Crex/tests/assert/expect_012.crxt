--TEST--
test enable/disable assertions at runtime
--INI--
crex.assertions=1
assert.exception=1
--FILE--
<?crx
var_dump((integer)ini_get("crex.assertions"));
ini_set("crex.assertions", 0);
var_dump((integer)ini_get("crex.assertions"));
assert(false);
ini_set("crex.assertions", 1);
var_dump((integer)ini_get("crex.assertions"));
assert(true);
var_dump(true);
?>
--EXPECT--
int(1)
int(0)
int(1)
bool(true)
